{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-11 build active file",
            "command": "/usr/bin/g++-11",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "classDefs.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lcurl",
                "-lboost_thread",
                "-lpthread",
                "-lssl",
                "-lcrypto",
                "-lboost_json"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}